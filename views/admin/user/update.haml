.large-12.columns
  %h2 Update user
  %form{method: 'POST', action: '/a/users'}
    .row
      .columns.large-6
        %label{for: 'username'} Username 
        %input.disabled{type: 'text', name: 'username-fake', id: 'username', value: user.username, disabled: true}
        %input{type: 'hidden', name: 'username', value: user.username}
      .columns.large-6
        %label{for: 'password'} Password
        %input{type: 'password', name: 'password', id: 'password', placeholder: 'Leave empty if you dont\'t want to change it'}

    .row
      .columns.large-6
        %label{for: 'home'} Home
        %input{type: 'text', name: 'home', id: 'home', placeholder: 'Be careful...', value: user.home}
      .columns.large-6
        %label In read only user won't be able to save archives nor to trash things
        %input{type: 'checkbox', id: 'key', name: 'key', value: 1}
        %label{for: 'key'} Generate new key
        %input{type: 'checkbox', id: 'admin', name: 'admin', value: 1, checked: !!user.admin}
        %label{for: 'admin'} Admin
        %input{type: 'checkbox', id: 'readonly', name: 'readonly', value: 1, checked: !!user.readonly}
        %label{for: 'readonly'} Readonly
    .row
      .columns.large-6
        %label{for: 'trash'}
          Trash
          %small only move mode
        %input{type: 'text', name: 'trash', id: 'trash', value: user.trash, placeholder: config.remove.trash}
        %label{for: 'archive'} Archive
        %input{type: 'text', name: 'archive', id: 'archive', value: user.archive, placeholder: config.archive.temp}
      .columns.large-6
        %label{for: 'ignore'}
          List of paths to be ignored
          %small one by line
        %textarea{name: 'ignore', id: 'ignore', rows: 5}= user.ignore

    .row
      .columns.large-3.large-offset-9
        %input{type: 'hidden', name: '_method', value: 'put'}
        %input.button.expand{type: 'submit', value: 'Update'}

